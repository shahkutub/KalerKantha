<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/homTop">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backBtn"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/descrip_03"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/details"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/backBtn"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingBtn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/setting_white"
        android:layout_marginRight="15dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shareBtn"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/settingBtn"
        android:background="@drawable/share_white"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favrtBtn"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/shareBtn"
        android:background="@drawable/fav_white"
        android:layout_marginRight="10dp"/>

</RelativeLayout>