<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:padding="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="@string/latest_news"
        android:id="@+id/idSectionTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="আরও>>"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/idSectionTitle"
        android:layout_alignBottom="@+id/idSectionTitle"
        android:layout_alignRight="@+id/idSectionTitle"
        android:layout_alignEnd="@+id/idSectionTitle" />


</RelativeLayout>