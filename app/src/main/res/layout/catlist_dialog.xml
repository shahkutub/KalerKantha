<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/topViewNewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/homTop"
        android:padding="5dp"
      >
        <ImageView
            android:id="@+id/dissmissCatListBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
            android:src="@drawable/descripasasss_06" />

        <TextView
            android:id="@+id/catHeadText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dissmissHelpBtn"
            android:gravity="center"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/whiteMy" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/catRcyList"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topViewNewList"/>

    <ProgressBar
        android:id="@+id/progressCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</RelativeLayout>